{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["DOM", "ES2016"],
    "allowJs": true,
    "checkJs": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "baseUrl": "./",
    "resolveJsonModule": true,
      "typeRoots": ["./node_modules/@types"],
      "types": ["node"]
  },
  "include": ["src/*", "src/**/*", "prisma/**/*"],
  "exclude": ["node_modules", "prisma/seed.ts", "build"]
}
